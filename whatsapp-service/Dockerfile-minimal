# Ultra-Minimal WhatsApp Service
FROM node:20-alpine

WORKDIR /app

# Install system dependencies (optional chromium for production)
RUN apk add --no-cache chromium || echo "Chromium not available - will download if needed" && \
    rm -rf /var/cache/apk/*

# Set Puppeteer to prefer system Chromium but allow fallback
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false \
    PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Copy minimal package.json
COPY whatsapp-service/package-minimal.json ./package.json

# Install minimal dependencies
RUN npm ci --only=production --silent && \
    npm cache clean --force

# Ultra-minimal environment
ENV NODE_ENV=production \
    NODE_OPTIONS="--max-old-space-size=128 --expose-gc" \
    SESSION_PATH=/app/session

# Copy only essential files
COPY whatsapp-service/server-minimal.js ./

# Create session directory
RUN mkdir -p session && chmod 755 session

# Use non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S whatsapp -u 1001 -G nodejs && \
    chown -R whatsapp:nodejs /app
USER whatsapp

EXPOSE 3000

# Ultra-minimal health check
HEALTHCHECK --interval=60s --timeout=5s --start-period=30s --retries=2 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000/health || exit 1

CMD ["node", "server-minimal.js"]